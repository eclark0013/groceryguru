


<%= form_with model: @recipe, local: true do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name, placeholder: "Chicken Parmesan" %><br><br>
    Add ingredients with quantities below. Then add directions.<br>
    <% 4.times do %>
        <%= f.fields_for :items, @recipe.items.build do |items_fields| %>
            <%= items_fields.label :name %>
            <%= items_fields.text_field :name, list: "item names" %> 
            <datalist id="item names">
                <% Item.pluck(:name).each do |item_name| %>
                    <option value="<%= item_name %>">
                <% end %>
            </datalist>
            <%= items_fields.label :quantity %>
            <%= items_fields.text_field :quantity %>
            <br>
        <% end %>
    <% end %>
    <br>
    <%= f.label :directions %>
    <%= f.text_field :directions, size: 30 %><br>
    <%= f.submit %>
<% end %>

