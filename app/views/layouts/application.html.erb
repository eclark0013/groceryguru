<!DOCTYPE html>
<html>
  <head>
    <title>Grocerylister</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if session[:name] %>
      <%= link_to "Home", root_path %>
    <% else %> 
      <%= link_to "Sign In", '/login' %>
    <% end %>
    <h1> Grocery Lister </h1>
  </head>

  <body>
    <%= yield %>

    <br><br>
    Footer:
    <br><%= link_to "Recipes", recipes_path %>
    
    <% if current_user %>
      <br><%= link_to "Lists", user_lists_path(current_user) %>
    <% end %>
    
    <% if session[:name] %>
    <br>
    <%= form_with url: "/logout", method: :post, local: true do |f| %>
        <%= f.submit "Logout" %>
      <% end %>
    <% end %>
  </body>
  

</html>
